    <script>
        let currentProjectName = "Untitled Project";

        function calculate() {
            const data = document.getElementById('panel').value.split('|');
            const w = parseInt(document.getElementById('w-qty').value) || 0;
            const h = parseInt(document.getElementById('h-qty').value) || 0;
            
            // Perform all standard calcs...
            document.getElementById('res-dim').innerText = `${(w*0.5).toFixed(1)}m x ${(h*0.5).toFixed(1)}m`;
            document.getElementById('res-total').innerText = w * h;
            document.getElementById('res-weight').innerText = (w * h * parseFloat(data[4])).toFixed(1) + "kg";
        }

        function saveToLibrary() {
            const name = prompt("Enter project name:", currentProjectName);
            if (!name) return;

            const project = {
                name: name,
                panel: document.getElementById('panel').value,
                w: document.getElementById('w-qty').value,
                h: document.getElementById('h-qty').value,
                date: new Date().toLocaleDateString()
            };

            let library = JSON.parse(localStorage.getItem('roe_library') || '[]');
            library.push(project);
            localStorage.setItem('roe_library', JSON.stringify(library));
            renderLibrary();
        }

        function renderLibrary() {
            const container = document.getElementById('library-list');
            const library = JSON.parse(localStorage.getItem('roe_library') || '[]');
            container.innerHTML = library.length ? '' : '<p class="text-zinc-600">No saved projects.</p>';
            
            library.forEach((proj, index) => {
                const div = document.createElement('div');
                div.className = 'library-item';
                div.innerHTML = `
                    <div>
                        <p class="font-bold">${proj.name}</p>
                        <p class="text-[10px] text-zinc-500">${proj.date}</p>
                    </div>
                    <button onclick="deleteProject(${index})" class="text-red-500 text-lg">&times;</button>
                `;
                div.onclick = (e) => {
                    if(e.target.tagName !== 'BUTTON') loadProject(index);
                };
                container.appendChild(div);
            });
        }

        function loadProject(index) {
            const library = JSON.parse(localStorage.getItem('roe_library'));
            const proj = library[index];
            document.getElementById('panel').value = proj.panel;
            document.getElementById('w-qty').value = proj.w;
            document.getElementById('h-qty').value = proj.h;
            calculate();
        }

        function deleteProject(index) {
            let library = JSON.parse(localStorage.getItem('roe_library'));
            library.splice(index, 1);
            localStorage.setItem('roe_library', JSON.stringify(library));
            renderLibrary();
        }

        window.onload = () => { renderLibrary(); calculate(); };
    </script>
</body>
