    <div class="max-w-6xl mx-auto">
        <header class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-black italic tracking-tighter uppercase">LED PRO <span class="text-[#00a0e9]">SUITE</span></h1>
            <div class="no-print space-x-4">
                <button onclick="saveToLibrary()" class="bg-green-600 hover:bg-green-500 text-white text-xs font-bold py-2 px-4 rounded">Save to Library</button>
                <button onclick="clearCurrent()" class="text-zinc-500 text-xs hover:text-white">New Project</button>
            </div>
        </header>

        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
            
            <div class="lg:col-span-1 space-y-6 no-print">
                <div class="result-box">
                    <h2 class="text-blue-400 font-bold mb-4 uppercase text-[10px] tracking-widest">Configuration</h2>
                    <label class="text-[10px] text-zinc-500 uppercase">Panel Model</label>
                    <select id="panel" onchange="calculate()">
                        <option value="BP2V2|2.8|176|176|9.2|400">Black Pearl BP2V2</option>
                        <option value="R1|1.5|320|320|7.5|350">Ruby R1.5</option>
                        <option value="CB5|5.7|88|176|12.5|650">Carbon CB5</option>
                    </select>
                    <div class="grid grid-cols-2 gap-3 mt-4">
                        <div>
                            <label class="text-[10px] text-zinc-500 uppercase">Wide</label>
                            <input type="number" id="w-qty" value="12" oninput="calculate()">
                        </div>
                        <div>
                            <label class="text-[10px] text-zinc-500 uppercase">High</label>
                            <input type="number" id="h-qty" value="8" oninput="calculate()">
                        </div>
                    </div>
                </div>

                <div class="result-box">
                    <h2 class="text-zinc-400 font-bold mb-4 uppercase text-[10px] tracking-widest">Project Library</h2>
                    <div id="library-list" class="max-h-64 overflow-y-auto text-xs">
                        </div>
                </div>
            </div>

            <div class="lg:col-span-3">
                <div class="flex space-x-4 mb-6 border-b border-zinc-800 no-print">
                    <div class="nav-btn active" onclick="switchTab('physical', this)">Physical</div>
                    <div class="nav-btn" onclick="switchTab('power', this)">Power</div>
                    <div class="nav-btn" onclick="switchTab('data', this)">Data</div>
                </div>

                <div id="physical" class="tab-content active space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div class="result-box text-center">
