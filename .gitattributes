        input, select { background: #27272a; border: 1px solid #3f3f46; color: white; padding: 10px; border-radius: 6px; width: 100%; }
        .result-box { background: #1c1c21; border: 1px solid #27272a; padding: 1.5rem; border-radius: 12px; }
        .library-item { background: #27272a; padding: 10px; border-radius: 8px; margin-bottom: 8px; cursor: pointer; display: flex; justify-content: space-between; align-items: center; }
